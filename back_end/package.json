{
  "name": "back_end",
  "version": "1.0.0",
  "description": "Backend do projeto hamburgeria",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsc --build --clean && tsc --build",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:deploy": "prisma migrate deploy"
  },
  "keywords": [
    "hamburgueria",
    "api",
    "typescript",
    "prisma"
  ],
  "author": "Domingos Dinis Jose Jovete",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domingos021/hamburgeria.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@types/nodemailer": "^7.0.4",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/node": "^22.19.1",
    "@types/pg": "^8.15.6",
    "prisma": "^7.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
